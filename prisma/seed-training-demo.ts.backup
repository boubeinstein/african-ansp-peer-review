async function loadAvailableOrganizations(): Promise<Organization[]> {
  if (cachedOrganizations.length > 0) return cachedOrganizations;

  cachedOrganizations = await prisma.organization.findMany({
    orderBy: { nameEn: "asc" },
  });

  if (cachedOrganizations.length === 0) {
    throw new Error(
      "No organizations found in database. Please run the base seed first: npm run db:seed"
    );
  }

  console.log(`   ğŸ“Š Found ${cachedOrganizations.length} organizations in database`);
  return cachedOrganizations;
}

function getOrganizationByIndex(orgs: Organization[], index: number): Organization {
  // Safely get organization by index, wrapping around if needed
  return orgs[index % orgs.length];
}

async function getOrganizationByCode(code: string): Promise<Organization> {
  const orgs = await loadAvailableOrganizations();
  const org = orgs.find((o) => o.organizationCode === code);

  if (!org) {
    // Fallback to first available organization
    console.log(
      `   âš ï¸  Organization code '${code}' not found. Available codes: ${orgs
        .filter((o) => o.organizationCode)
        .map((o) => o.organizationCode)
        .slice(0, 10)
        .join(", ")}...`
    );
    console.log(`   ğŸ“Œ Using fallback organization: ${orgs[0].nameEn}`);
    return orgs[0];
  }
  return org;
}

async function getUserByEmail(email: string) {
  const user = await prisma.user.findUnique({
    where: { email },
  });
  if (!user) throw new Error(`User not found: ${email}`);
  return user;
}

async function getCoordinator() {
  // Find any user with PROGRAMME_COORDINATOR role
  const coordinator = await prisma.user.findFirst({
    where: { role: "PROGRAMME_COORDINATOR" },
  });
  if (!coordinator) throw new Error("No programme coordinator found");
  return coordinator;
}

async function getReviewerFromDifferentOrg(
  hostOrgId: string,
  excludeOrgIds: string[],
  leadQualified: boolean = false
) {
  // Find a reviewer from an organization that is NOT the host org
  const profile = await prisma.reviewerProfile.findFirst({
    where: {
      homeOrganizationId: {
        notIn: [hostOrgId, ...excludeOrgIds],
      },
      ...(leadQualified ? { status: "LEAD_QUALIFIED" } : {}),
    },
    include: { user: true, homeOrganization: true },
  });
  return profile;
}

async function getReviewerForOrg(orgCode: string, leadQualified: boolean = false) {
  const org = await getOrganizationByCode(orgCode);
  const profile = await prisma.reviewerProfile.findFirst({
    where: {
      homeOrganizationId: org.id,
      ...(leadQualified ? { status: "LEAD_QUALIFIED" } : {}),
    },
    include: { user: true },
  });
  return profile;
}

function addDays(date: Date, days: number): Date {
  const result = new Date(date);
  result.setDate(result.getDate() + days);
  return result;
}

